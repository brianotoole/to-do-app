<h1>To-Do List</h1>
<ul class="items">
  {{#each todos}}   
    <li class="item">
       <a href="/delete/{{name}}">X</a><span>{{name}}</span>
    </li>
  {{/each}}
</ul>

<h2>Add Item</h2>
<form action="/create" method="POST">
  <input type="text" placeholder="Item" name="name">
  <button type="submit">Add Item</button>
</form>